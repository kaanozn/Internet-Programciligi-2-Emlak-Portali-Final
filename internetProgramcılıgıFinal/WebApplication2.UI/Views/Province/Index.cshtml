
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<div id="divResult" class="alert"></div>

<div class="container">
    <h1 class="mt-4">İlce İşlemleri</h1>
    <div id="divResult" class="alert"></div>
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>İlce Adı</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="kategoriListesi">
                        <!-- Dynamic content will be injected here -->
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    İlce Ekle
                </div>
                <div class="card-body">
                    <form id="ilceForm">
                        <div class="form-group">
                            <label for="name">İl Adı :</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="il giriniz ">
                        </div>

                        <button id="ekle" class="btn btn-primary mt-3">Kaydet</button>
                        <button id="guncelle" class="btn btn-dark mt-3" style="display:none;">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script>

    $(document).ready(function () {
        listele();
        $("#ilceForm").submit(function (e) {
            e.preventDefault();
            var visable = $("#guncelle").is(":visible");
            if (visable) {

                guncelle();



            } else {

                ekle();
            }
        });
    });

    var selectedProvinceId = null;
    var baseurl = "http://localhost:1234/";
    var gettoken = localStorage.getItem("token");

    function listele() {
        $.ajax({
            type: "GET",
            url: baseurl + "api/Provinces",
            contentType: "application/json",
            headers: {
                "Authorization": "Bearer " + gettoken
            },
            success: function (response) {
                console.log(response);
                var html = "";
                $.each(response, function (index, item) {
                    html += "<tr>";
                    html += "<td>" + item.name + "</td>";
                    html += "<td>";
                    html += "<button class='btn btn-primary' onclick='duzenle(\"" + item.id + "\", \"" + item.name + "\")'>Düzenle</button> ";
                    html += "<button class='btn btn-danger' onclick='sil(\"" + item.id + "\")'>Sil</button>";
                    html += "</td>";
                    html += "</tr>";
                });
                $("#kategoriListesi").html(html);
            },
            error: function (xhr, status, error) {
                console.error("Error: " + status + " " + error);
            }
        });
    }

    function sil(id) {
        $.ajax({
            type: "DELETE",
            url: baseurl + "api/Provinces/" + id,
            contentType: "application/json",
            headers: {
                "Authorization": "Bearer " + gettoken
            },
            success: function (response) {
                console.log(response);
                listele(); // Refresh the list after deletion
                $("#divResult")
                    .show()
                    .removeClass()
                    .addClass("alert alert-success")
                    .html("Silme Başarılı")
                    .fadeOut(5000);
            },
            error: function (xhr, status, error) {
                console.error("Error: " + status + " " + error);
            }
        });
    }

    function ekle() {
        var districtDto = {
            name: $("#name").val(),

        };

        $.ajax({
            type: "POST",
            url: baseurl + "api/Provinces",
            contentType: "application/json",
            data: JSON.stringify(districtDto),
            headers: {
                "Authorization": "Bearer " + gettoken
            },
            success: function (response) {
                console.log(response);
                $("#ilceForm")[0].reset(); // Reset the form
                listele(); // Refresh the list
                $("#divResult")
                    .show()
                    .removeClass()
                    .addClass("alert alert-success")
                    .html("Kayıt Başarılı")
                    .fadeOut(5000);
            },
            error: function (xhr, status, error) {
                console.error("Error: " + status + " " + error);
            }
        });
    }

    function duzenle(id, name) {
        selectedProvinceId = id;
        $("#name").val(name);
        $("#ekle").hide();
        $("#guncelle").show();
        console.log("Düzenle button clicked. Category ID: " + id);

    }

    function guncelle() {
        var districtDto = {
            id: selectedProvinceId,
            name: $("#name").val(),
        };

        $.ajax({
            type: "PUT",
            url: baseurl + "api/Provinces",
            contentType: "application/json",
            data: JSON.stringify(districtDto),
            headers: {
                "Authorization": "Bearer " + gettoken
            },
            success: function (response) {
                console.log(response);
                $("#ilceForm")[0].reset(); // Reset the form
                $("#ekle").show();
                $("#guncelle").hide();
                listele(); // Refresh the list
                $("#divResult")
                    .show()
                    .removeClass()
                    .addClass("alert alert-success")
                    .html("Güncelleme Başarılı")
                    .fadeOut(5000);
            },
            error: function (xhr, status, error) {
                console.error("Error: " + status + " " + error);
            }
        });
    }

</script>

